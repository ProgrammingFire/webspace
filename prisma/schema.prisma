generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth", "public"]
}

model Challenge {
  id          String     @id @unique @default(uuid())
  name        String     @unique
  description String
  images      String[]   @default([])
  solutions   Solution[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@schema("public")
}

enum Framework {
  Angular
  React
  Svelte
  Vue

  @@schema("public")
}

model Solution {
  id            String     @id @unique @default(uuid())
  solvedBy      String
  framework     Framework
  sourceCodeUrl String     @unique
  liveAppUrl    String     @unique
  challengeId   String?
  challenge     Challenge? @relation(fields: [challengeId], references: [id])
  user          User       @relation(fields: [solvedBy], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@schema("public")
}

model User {
  id         String     @id @unique @default(uuid())
  email      String     @unique
  username   String     @unique
  name       String
  team       Team
  profilePic String?
  bio        String?    @default("Hey there, I have entered the space!")
  techStack  String[]   @default([])
  location   String?
  twitter    String?
  github     String?
  website    String?
  youtube    String?
  followers  String[]   @default([])
  following  String[]   @default([])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now()) @updatedAt
  solutions  Solution[]

  @@schema("auth")
}

enum Team {
  Earth
  Mars
  Jupiter
  Saturn

  @@schema("auth")
}
